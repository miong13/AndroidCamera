    <style name="AppButtonBorderlessColored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MultimagerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Custom dialog style -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/mlr_round_corner</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonBarStyle">@style/CustomDialogButtonBar</item>
    </style>

    <!-- Custom button bar style -->
    <style name="CustomDialogButtonBar" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="buttonStyle">@style/CustomDialogButton</item>
    </style>

    <!-- Custom button style -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

